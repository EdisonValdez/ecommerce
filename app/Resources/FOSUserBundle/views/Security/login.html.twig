{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
 <div class="container" align="center">
     <div id="content">
         <div class="row">
		<div class="col-sm-4">
                   <div class="form-block">
                       <h3 class="navbar">Nous Vous invites a vous a inscrire</h3>        
                    
                    <br />
                 
                    <center>  <a href="{{ path('fos_user_registration_register') }}"> 
                         <input type="submit" id="_submit" class="beta-btn primary btn-block" value="{{ 'registration.submit'|trans }}"  />
                        </a>  </center>   
                 </div>  
                     
                    
                </div>
             <div class="col-sm-8">
         <h3 class="navbar">Sign In</h3>
        <form class="beta-form-checkout" action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="form-block">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>
        <div class="form-block">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input  type="password" id="password" name="_password" required="required" />
        </div>
        
        <div class="form-block">
            <label for="remember_me">&nbsp;</label> 
          
            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="beta-btn primary btn-block" />
        </div>
        </form>
         </div>
    </div>
 </div>
{% endblock fos_user_content %}

